<Window x:Class="UniversalLobby.gui.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="250" Width="300" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Username:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Name="txtUserName" Grid.Column="1" Grid.Row="0" Margin="5" />
        <TextBlock Text="Avatar:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="5" />
        <Image Name="imgAvatar" Stretch="Fill" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Margin="5" />
        <Button Content="Browse" Name="btnOpenAvatar" Click="btnOpenAvatar_Click" Grid.Column="2" Grid.Row="2" Margin="5" />
        <Button Content="Save" Name="btnClose" Click="btnClose_Click" Grid.Column="2" Grid.Row="4" Margin="5" />
    </Grid>
</Window>
