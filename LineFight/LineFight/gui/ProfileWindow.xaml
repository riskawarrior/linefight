<Window x:Class="LineFight.gui.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profil" Height="300" Width="300" Closing="Window_Closing">
    <Grid ShowGridLines="False">
        <TextBlock Height="23" Margin="12,23,0,0" Name="lblUserName" Text="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Width="56" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="74,20,0,0" Name="txtUserName" VerticalAlignment="Top" Width="120" TextChanged="txtUserName_TextChanged" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,78,0,0" Name="lblAvatar" Text="Avatar:" VerticalAlignment="Top" />
        <Border BorderThickness="2" >
            <Image Height="92" HorizontalAlignment="Left" Margin="74,59,0,0" Name="imgAvatar" Stretch="Fill" VerticalAlignment="Top" Width="87" />
        </Border>
        <Button Content="Tallóz" Height="23" HorizontalAlignment="Left" Margin="74,170,0,0" Name="btnOpenAvatar" VerticalAlignment="Top" Width="75" Click="btnOpenAvatar_Click" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="183,226,0,0" Name="btnClose" VerticalAlignment="Top" Width="75" DataContext="{Binding}" Click="btnClose_Click" />

    </Grid>
</Window>
